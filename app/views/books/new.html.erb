<%= link_to("Back to Homepage", books_path) %>

<h2>Add New Book</h2>

<%= form_for(@book) do |f| %>
	<table>
		<tr>
			<th align="left">Book Title</th>
			<td><%= f.text_field(:title) %></td>
		</tr>
		<tr>
			<th align="left">Author</th>
			<td><%= f.text_field(:author) %></td>
		</tr>	
		<tr>
			<th align="left">Price</th>
			<td><%= f.number_field(:price), step: 0.01 %></td>
		</tr>		
		<tr>
			<th align="left">Date Published</th>
			<td><%= f.date_field(:published_date) %></td>
		</tr>		
	</table>

	<div>
		<%= f.submit("Add Book") %>
	</div>

<% end %>
