<h1>Book Collection</h1> <br/>

<%= link_to('Add New Book', new_book_path) %>

<table style="width: 100%">
	<tr>
		<th align="left">Book Title</th>
		<th align="left">Actions</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td>
			<%= link_to('Show', book_path(book)) %>
			<%= link_to('Edit', edit_book_path(book)) %>
			<%= link_to('Delete', delete_book_path(book)) %>
		</td>
	</tr>
	<% end %>
</table>